---
import Page from '../layouts/Page.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Page
	title="Projects by Bob Matyas | Web Developer - Grand Rapids, MI"
	description="A collection of web projects by Bob Matyas."
	pubDate={new Date('August 08 2021')}
	heroImage="/blog-placeholder-about.jpg"
>
<div class="main">
	<h2 class="main__header">Projects</h2>

	<div class="page">
	  <div class="grid sm:gap-4 sm:grid-cols-2">
		<ProjectCard
		name="Block AI Crawlers Plugin"
		description="Take back control over your content. This plugin stops AI bots from crawling your WordPress site using meta tags and robots.txt rules."
		link="https://wordpress.org/plugins/block-ai-crawlers/"
		linkTitle="View on WordPress.org"
		tag="WordPress"
	></ProjectCard>
	<ProjectCard
	name="Pretty RSS Feeds Plugin"
	description="A plugin to make the default WordPress RSS feed easier to use."
	link="https://wordpress.org/plugins/pretty-rss-feed"
	linkTitle="View on WordPress.org"
	tag="WordPress"
></ProjectCard>
	<ProjectCard
	name="EXIF Remover Plugin"
	description="A simple WordPress plugin to remove EXIF data from images before uploading."
	link="https://wordpress.org/plugins/exif-remover/"
	linkTitle="View on WordPress.org"
	tag="WordPress"
></ProjectCard>
		<ProjectCard
			name="Security Research"
			description="Digging deep into WordPress plugins/themes to uncover and responsibly disclose security vulnerabilities."
			link="./wordpress-vulnerabilities"
			linkTitle=""
				tag="WordPress"
		></ProjectCard>

		<ProjectCard
			name="Helper for Cloudflare Web Analytics Plugin"
			description="Easily add privacy-friendly, JavaScript-free analytics to your WordPress site using Cloudflare."
			link="https://wordpress.org/plugins/helper-for-cloudflare-web-analytics/"
			linkTitle="View on WordPress.org"
				tag="WordPress"
		></ProjectCard>
		<ProjectCard
			name="Details: Show and Hide Plugin"
			description="Add native <details> support to the block editor. Collapse/expand sections for a cleaner UX."
			link="https://wordpress.org/plugins/details-show-and-hide/"
			linkTitle="View on WordPress.org"
				tag="WordPress"
		></ProjectCard>
	  </div>
	</div>
  </div>
</Page>
