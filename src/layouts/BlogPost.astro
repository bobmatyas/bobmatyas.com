---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HcardPostTitle from '../components/HcardPostTitle.astro';
import PostTags from '../components/PostTags.astro'

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main>
			<div class="main py-2">
				<article class="h-entry mt-10">
				{tags ? <PostTags tags={tags} /> : ""}
				  <h1 class="p-name text-slate-800 font-extrabold text-2xl md:text-6xl mt-5">
					{title}
				  </h1>
				  <HcardPostTitle date={pubDate}></HcardPostTitle>

				  <div
					class="e-content mt-10 prose md:prose-lg lg:prose-xl prose-slate font-serif">
					<slot />
				</div>
				</article>
			  </div>
		</main>
		<Footer />
	</body>
</html>
